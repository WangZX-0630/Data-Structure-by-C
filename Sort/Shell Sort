#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void ShellSort(int array[], int N) {
    int Tmp, Increment, i, j;
    for(Increment = N / 2; Increment > 0; Increment /= 2) {
        for(i = Increment; i < N; ++i) {
            Tmp = array[i];
            for(j = i; j >= Increment; j -= Increment) {
                if(array[j - Increment] > Tmp) {
                    array[j] = array[j - Increment];
                }
                else break;
            }
            array[j] = Tmp;
        }
    }
}

void AddRandNum(int array[], int N) {
    srand((unsigned)time(NULL));
    for(int i = 0; i < N; ++i) {
        array[i] = rand() % (10 * N);
    }
}

void test(int array[], int N) {
    ShellSort(array, N);
    /*for(int i = 0; i < N; ++i) {
        printf("%d,",array[i]);
    }*/
}

int main()
{
    int N = 1000000;
    int array[N];
    AddRandNum(array, N);
    clock_t start, finish;
    start = clock();
    test(array, N);
    finish = clock();
    printf("\nProcessing time: %1f ms\n",(double)(finish - start) / 1000);
    return 0;
}

/* On my computer, it costs about 0.3s to sort 100w numbers with BubbleSort */
